<div class="search-container" id ="searchInput" style="display:none;">
    <div class="container">
        <div class="search-header">
            <div class="nav-wrapper">
                <form action="#">
                    <div class="search-field">
                        <div id="search-input" class="input-field">
                            <i class="material-icons prefix">search</i>
                            <input id="icon_prefix" type="text" name="search" placeholder="enter your search">
                            <!-- limpa o que estiver no input -->
                            <button id="clearSearch" type="button" class="clear-search">
                                <i class="material-icons">close</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="search-results" class="js-search-results" style="display:none;">
  <div class="container">
    <div class="list-results">
      <div class="column-centered">
        <ul id="projects-list" class="list-view project-search-results">
            <% @projects.each do |project| %>
              <li class="list-project">
                <div class="media-round user-project-image">
                  <img src="<%= current_user.avatar.url %>" alt="">
                </div>

                <%= link_to project_groups_path(project), class: 'collection-item' do %>
                  <div class="project-name"><%= project.name %></div>
                <% end %>
                <div class="project-owner">by<b><%= current_user.first_name %></b></div>
                <div class="project-description"><%= project.description %></div>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
