<!DOCTYPE html>
<html>
<head>
	<title>Trek</title>
</head>
<body>
<div class="login-signup-container">
	<div class="login-container">
		<a class="waves-effect waves-light btn modal-trigger" href="#modal2">Login</a>
	</div>
		<div class="signup-container">
			<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Sign up</a>
		</div>
		</div>
	<div class="row">
		<div class="aplication-name">
			<h1>TREK</h1>
		</div>
		<div class="container">
			<div id="modal1" class="modal">
				<div class="modal-content">
					<div class="row">
						<form class="col s12">
							<div class="row">
								<div class="input-field">
									<i class="material-icons prefix">F</i>
									<input id="first_name" type="text" class="validate">
									<label for="first_name">First Name</label>
								</div>
								<div class="input-field">
									<i class="material-icons prefix">L</i>
									<input id="last_name" type="text" class="validate">
									<label for="last_name">Last Name</label>
								</div>
								<div class="input-field">
									<i class="material-icons prefix">email</i>
									<input id="email" type="email" class="validate">
									<label for="email">Email</label>
								</div>
								<div class="input-field">
									<i class="material-icons prefix">lock_outline</i>
									<input id="Password" type="text" class="validate">
									<label for="Password">Password</label>
								</div>
								<div class="modal-footer">
									<a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
								</div>
							</div>
						</form>
					</div>

				</div>
			</div>
		</div>
		<div id="modal2" class="modal">
			<div class="modal-content">
				<div class="input-field col s12">
					<i class="material-icons prefix">email</i>
					<input id="icon_prefix" type="text" class="validate">
					<label for="icon_prefix">Email</label>
					<div class="input-field">
						<i class="material-icons prefix">lock_outline</i>
						<input id="lock_outline" type="text" class="validate">
						<label for="lock_outline">Password</label>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Login</a>
			</div>
		</div>
		<div class="biohazard">
	</div>
	</body>
</html>