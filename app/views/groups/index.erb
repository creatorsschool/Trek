<div class="new_group">
  <button>
    <%= link_to 'New group', new_project_group_path(@project), class: "waves-effect waves-light btn" %>
  </button>
</div>

<% if !@groups.empty? %> 
  <% @groups.each do |group| %>

    <div class="row">
      <div class="col s6 m4">
        <div class="card medium"> 
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="http://portfoliotheme.org/enigmatic/wp-content/uploads/sites/9/2012/07/placeholder1.jpg">
            </div>

            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">

                  <%= link_to group.name, project_group_path(@project, group.id) %>

              <% if !group.tasks.empty? %>
                <i class="material-icons right">list</i>
              <% end %>

              </span>

                <div class="newTask">
                  <%= link_to new_task_path(group_id: group.id) do %>
                    <i class="material-icons">note_add</i>
                  <% end %>

                    <%= link_to project_group_path(@project, group), :method => :delete do %>
                      <i class="material-icons">delete</i>
                    <% end %>
                    <%= link_to edit_project_group_path(@project, group) do %>
                      <i class="material-icons">settings</i>
                    <% end %>

                </div>
            </div>

            <% if !group.tasks.empty? %>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Task's<i class="material-icons right">close</i></span>
                <p>
                  <div class="listTask"> 
                    <% group.tasks.each do |task| %>
                      <ul>
                        <li>
                          <%= task.field %>
                          <%= task.status %>
                          <%= link_to 'Toggle', toggle_task_path(task), method: :put %>
                          <%= link_to 'Edit', edit_task_path(task) %>
                          <%= link_to 'Destroy', task_path(task), method: :delete %>
                        </li>
                      </ul>
                    <% end %>
                  </div>
                </p>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  <% end %>
<% end %>