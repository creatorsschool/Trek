            <p>
              <div class="listTask"> 
                <% @tasks.each do |task| %>
                  <ul>
                    <li>
                      <%= task.field %>
                      <%= task.status %>
                      <%= link_to 'Toggle', toggle_task_path(task), method: :put %>
                      <%= link_to 'Edit', edit_task_path(task) %>
                      <%= link_to 'Destroy', task_path(task), method: :delete %>
                    </li>
                  </ul>
                <% end %>
              </div>
            </p>
          </div>
        <% end %>


      </div>
