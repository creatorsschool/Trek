<div class="js-search-results">
  <div class="container">
    <div class="list-results">
      <div class="column-centered">
        <ol class="list-view">
          <li class="list-project">
            <div class="project-search">
              <h2 class="search-title">Enter your search above</h2>
            </div>
            <div class="project-search-results">
              <div class="media-round user-project-image">
                <img src="https://a2.muscache.com/defaults/user_pic-50x50.png?v=2" alt="">
              </div>
              <ul>
                <li><a href="#"><span class="project-name"> Teste</span></a></li>
                <li><span class="project-owner">by <b>Owner Name</b></span></li>
                <li><span class="project-description">project</span></li>
              </ul>
            </div>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s6 offset-s3">
    <div>
      <h3>Project List:</h3>
      <div id="projects-list" class="collection list-projects">
        <% @projects.each do |project| %>
        <%= link_to project.name, project_path(project), class: "collection-item" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render partial: '/dashboard/cards' %>

<h1>**********************************************</h1>

<ul class="list-groups">
  <% @groups.each do |group| %>
  <li>
    <%= link_to group.name, group_path(group) %>
    <%= link_to 'Delete', group_path(group), :method => :delete %>
    <%= link_to 'Edit',edit_group_path(group) %>
    <% end %>
  </li>
</ul>

<div id="modal1" class="modal">

  <div class="modal-content">
    <h4>New Project</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>


<div class="new_user">
  <a href='/user/new'><button>New User</button></a>
</div>

<div class="new_group">
  <button><%= link_to 'New group', new_group_path %></button>
</div>


<div class="fixed-action-btn" style="bottom: 45px; right:24px;">
  <a class="btn-floating btn-large red">
    <i class="material-icons">chat_bubble_outline</i>
  </a>
  <ul class="list-users">
    <% unless @list_groups.empty? %>
      <% @list_groups.each do |group| %>
        <% group.users.all.each do |user| %>
            <li>
              <% if user.first_name.downcase != current_user.first_name.downcase %> 
                  <a href="<%= user_instant_messages_path({user_id: user.id}) %>" class="btn-floating" style="transform: scaleY(0.4) scaleX(0.4) translateY(40px); opacity: 0;">
                      <i class="name_user"><%= user.first_name %></i>   
                  </a>
              <% end %>
            </li>
        <% end %>
      <%end%>
    <% end %>
  </ul>
</div>

<div class="new_group">
  <button><%= link_to 'New group', new_group_path %></button>
</div>
